{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja-debug",
      "displayName": "Ninja Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ninja-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "ninja-release",
      "displayName": "Ninja Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ninja-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "msvc",
      "displayName": "Visual Studio 2022 (x64)",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/msvc",
      "architecture": "x64",
      "cacheVariables": {
        "PROCROGUE_FETCH_SDL2": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-ninja-debug",
      "configurePreset": "ninja-debug"
    },
    {
      "name": "build-ninja-release",
      "configurePreset": "ninja-release"
    },
    {
      "name": "build-msvc-release",
      "configurePreset": "msvc",
      "configuration": "Release"
    }
  ]
}
